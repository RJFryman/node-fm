doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body(style='background-image:url("/img/head.jpg")')
    .row
      .small-12.columns
        h1=title
    .row
      .small-8.columns &nbsp;
      .small-2.columns
        a.button.tiny.radius(href='/') Home
      .small-2.columns
        button.tiny.radius#toggle Add Album
    .row
      .small-12.columns
        form.hide#hidden(action='/albums', method='post', enctype='multipart/form-data')
          fieldset
            legend New Album
            .row
              .small-2.columns
                label Artist
                input(type='text', name='artist')
              .small-2.columns
                label Album Title
                input(type='text', name='title')
              .small-2.columns
                label Genre
                input(type='text', name='genre')
              .small-2.columns
                label Release Year
                input(type='text', name='genre')
              .small-2.columns
                label Album Art
                input(type='file', name='cover')
              .small-2.columns
                label &nbsp;
                button.small.radius Add Album
    .row
      .small-12.columns
        each album in albums
          .albums
            .cover(style='background-image:url("'+album.cover+'")')
            .titles: a(href='/albums/' +album._id)= album.title
            .artists= album.artist

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

